<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_ground"
    android:orientation="vertical"
      android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    tools:context=".Anuncio_Preview" >

    <ImageView
        android:id="@+id/promo_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/descuentos" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/offer_title_size" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textColor="@color/color_texto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/vigencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textColor="@color/color_texto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/qr_code"
        android:layout_width="126dp"
        android:layout_height="180dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/publica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluberry_blue"
        android:text="Enviar" />

</LinearLayout>

</ScrollView>